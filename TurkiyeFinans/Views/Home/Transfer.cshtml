@model TurkiyeFinans.Models.ViewModel
@{
    Layout = "_TestLayout";
}
<div class="form-container">
    <form class="custom-form" asp-action="HavaleYap">
        <label for="senderAccount">Gönderici Hesabı</label>
        <select id="senderAccount" name="senderAccount"class="dropdownlist">
            <option value="" disabled selected hidden>Seçiniz ...</option>
            @if (Model._Accounts != null && Model._Accounts.Any())
            {
                @foreach (var account in Model._Accounts)
                {
                    @if(account.AccountType == "Vadesiz"){
                        <option value="@account.AccountId">@account.Iban</option>
                    }
                }
            }
        </select>
        <input type="text" id="recipientIBAN" name="recipientIBAN" class="textbox" placeholder="Alıcı IBAN">
        <input type="text" id="recipientName" name="recipientName" class="textbox" placeholder="Alıcı isim soy isim">
        <input type="text" id="recipientAmount" name="recipientAmount" class="textbox" placeholder="Gönderilecek Miktar">
        <button type="submit" class="btn">Havale Yap</button>
    </form>
</div>