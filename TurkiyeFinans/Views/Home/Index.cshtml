@model TurkiyeFinans.Models.ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}

<form method="post" asp-controller="Home" asp-action="Index">
    <div class="form-group">
        <label><strong>Kayıt Ol</strong></label>
    </div>
    <div class="form-group">
        <label for="tc">TC no</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.TCKimlikNo, new { @class = "form-control", @type = "number", id = "TCKimlikNo", nameo = "TCKimlikNo" })
    </div>
    <div class="form-group">
        <label for="ad">Adı</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.Ad, new { @class = "form-control", @type = "text", id = "Ad" })
    </div>
    <div class="form-group">
        <label for="soyad">Soyadı</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.Soyad, new { @class = "form-control", @type = "text", id = "Soyadı" })
    </div>    
    <div class="form-group">
        <label for="DogumTarihi">Doğum Tarihi</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.DogumTarihi, new { @class = "form-control", @type = "date", id = "DogumTarihi" })
    </div>
    <div class="form-group">
        <label for="Adres">Adres</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.Adres, new { @class = "form-control", @type = "text", id = "Adres" })
    </div>
    <div class="form-group">
        <label for="Telefon">Telefon</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.Telefon, new { @class = "form-control", @type = "tel", id = "Telefon" })
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.Email, new { @class = "form-control", @type = "email", id = "Email" })
    </div>
    <div class="form-group">
        <label for="Pass">Parola</label>
        @Html.TextBoxFor(model => model._mernisserviceparametters.Pass, new { @class = "form-control", @type = "text", id = "Pass" })
    </div>

    <button type="submit" class="btn btn-primary" asp-controller="Home" asp-action="KayitOl">Kayit ol</button>

</form>
