@model TurkiyeFinans.Models.ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home Page";
}

<form method="post" asp-controller="Home" asp-action="KayitOl">
    <div class="form-group">
        <label><strong>Kayıt Ol</strong></label>
    </div>
    <div class="form-group">
        <label for="TCKimlikNo">TC no</label>
        <input type="number" class="form-control" id="TCKimlikNo" name="TCKimlikNo" />
    </div>
    <div class="form-group">
        <label for="Ad">Adı</label>
        <input type="text" class="form-control" id="Ad" name="Ad" />
    </div>
    <div class="form-group">
        <label for="Soyad">Soyadı</label>
        <input type="text" class="form-control" id="Soyad" name="Soyad" />
    </div>
    <div class="form-group">
        <label for="DogumTarihi">Doğum Tarihi</label>
        <input type="date" class="form-control" id="DogumTarihi" name="DogumTarihi" />
    </div>
    <div class="form-group">
        <label for="Adres">Adres</label>
        <input type="text" class="form-control" id="Adres" name="Adres" />
    </div>
    <div class="form-group">
        <label for="Telefon">Telefon</label>
        <input type="tel" class="form-control" id="Telefon" name="Telefon" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" />
    </div>
    <div class="form-group">
        <label for="Pass">Parola</label>
        <input type="password" class="form-control" id="Pass" name="Pass" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Kayit ol</button>
</form>
<br />
<form method="post" asp-controller="Home" asp-action="GirisYap">
    <div class="form-group">
        <label><strong>Giris Yap</strong></label>
    </div>
    <div class="form-group">
        <label for="GirTCKimlikNo">TC no</label>
        <input type="number" class="form-control" id="GirTCKimlikNo" name="GirTCKimlikNo" />
    </div>
    <div class="form-group">
        <label for="GirPass">Password</label>
        <input type="password" class="form-control" id="GirPass" name="GirPass" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Giris Yap</button>
</form>
<br />
<form method="post" asp-controller="Home" asp-action="Sil">
    <div class="form-group">
        <label><strong>Musteri Sil</strong></label>
    </div>
    <div class="form-group">
        <label for="SilTCKimlikNo">TC no</label>
        <input type="number" class="form-control" id="SilTCKimlikNo" name="SilTCKimlikNo" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Sil</button>
</form>
<br />

<div class="header-container">
    <label><strong>Müşteri Listesi</strong></label>
    <form method="post" asp-action="CustomerListele">
        <button type="submit" class="btn btn-primary">Listele</button>
    </form>
</div>

@if (Model._Customer != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>CustomerId</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>DateOfBirth</th>
                <th>Address</th>
                <th>PhoneNumber</th>
                <th>Email</th>
                <th>IdentificationNumber</th>                
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model._Customer)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.DateOfBirth</td>
                    <td>@customer.Address</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.Email</td>
                    <td>@customer.IdentificationNumber</td>                    
                </tr>
            }
        </tbody>
    </table>
}