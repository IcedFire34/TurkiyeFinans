@model TurkiyeFinans.Models.ViewModel
@{
    Layout = "_TestLayout";    
}
<div class="form-container">    
    <form method="post" >
        <input type="hidden" name="identificationNumber" value="@Model._Customer.IdentificationNumber" />
        <!-- Hesap Aç Butonu -->
        <button type="submit" class="btn btn-primary full-width" asp-action="HesapOlustur" >Hesap Aç</button>
        <!-- Havale Yap Butonu -->
        <button type="submit" class="btn btn-primary" asp-action="Transfer">Havale</button>
        <!-- Hesap Listele Butonu -->
        <button type="submit" class="btn btn-primary" asp-action="HesapListele">Listele</button>
        <!-- Para Yatır Butonu -->
        <button type="submit" class="btn btn-primary" asp-action="ParaYatir">Para Yatır</button>     
        <!-- PAra çek Butonu -->
        <button type="submit" class="btn btn-primary" asp-action="ParaCek">Para Çek</button>
        <!-- Islemler Butonu -->
        <button type="submit" class="btn btn-primary" asp-action="">İslemler</button>
    </form>  
</div>
<!-- Dropdownlist ve Kapat Butonu -->
<div class="dropdown-and-button">
    <select class="form-control" id="CloseAccountID" name="CloseAccountID" required onchange="showDynamicFields()">
        <option value="" disabled selected hidden>Seçiniz ...</option>
        @if (Model._Accounts != null && Model._Accounts.Any())
        {
            @foreach (var account in Model._Accounts)
            {
                <option value="@account.AccountId">[@account.AccountId] Hesap Türü :@account.AccountType  Bakiye:@account.Balance</option>
            }
        }
    </select>
    <button type="submit" class="btn btn-danger" asp-action="HesapKapat">Hesap Kapat</button>
</div>
